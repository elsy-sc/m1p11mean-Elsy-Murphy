--- statistique -------
----- nombre de reservation par mois en une ann√©e --------
db.rendezvous.aggregate([
  {
    $addFields: {
      convertedDate: {
        $dateFromString: {
          dateString: '$dateheurerendezvous',
          format: '%Y-%m-%d %H:%M:%S'
        }
      }
    }
  },
  {
    $match: {
      $and: [
        { _state: 1},
        { 
          $expr: {
            $eq: [{ $year: '$convertedDate' },  2024] // 2024 est le parametre de l'annee
          }
        }
      ]
    }
  },
  {
    $group: {
      _id: { $month: '$convertedDate' },
      nombrereservation: { $sum:   1 }
    }
  }
]);

----------- nombre de reservation par jour (entre deux dates) ---------------
db.rendezvous.aggregate([
  {
    $addFields: {
      dateConvertie: {
        $dateFromString: {
          dateString: "$dateheurerendezvous",
          format: "%Y-%m-%d %H:%M:%S"
        }
      }
    }
  },
  {
    $group: {
      _id: {
        $dateToString: {
          format: "%Y-%m-%d",
          date: "$dateConvertie"
        }
      },
      nombrereservation: { $sum:  1 }
    }
  }
])

