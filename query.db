--- statistique -------
----- nombre de reservation par mois en une année --------
db.rendezvous.aggregate([
  {
    $addFields: {
      convertedDate: {
        $dateFromString: {
          dateString: '$dateheurerendezvous',
          format: '%Y-%m-%d %H:%M:%S'
        }
      }
    }
  },
  {
    $match: {
      $and: [
        { _state: 1},
        { 
          $expr: {
            $eq: [{ $year: '$convertedDate' },  2024] // 2024 est le parametre de l'annee
          }
        }
      ]
    }
  },
  {
    $group: {
      _id: { $month: '$convertedDate' },
      nombrereservation: { $sum:   1 }
    }
  }
]);

----------- nombre de reservation par jour (entre deux dates) ---------------
db.rendezvous.aggregate([
  {
    $addFields: {
      dateConvertie: {
        $dateFromString: {
          dateString: "$dateheurerendezvous",
          format: "%Y-%m-%d %H:%M:%S"
        }
      }
    }
  },
  {
    $match: {
      $and: [
        {_state: 1},
        {
          dateConvertie: {
            $gte: ISODate("2024-01-01T00:00:00Z"),
            $lte: ISODate("2024-01-31T23:59:59Z")
          }
        }  
      ]
    }
  },
  {
    $group: {
      _id: {
        $dateToString: {
          format: "%Y-%m-%d",
          date: "$dateConvertie"
        }
      },
      nombrereservation: { $sum:  1 }
    }
  }
])

----------- benefice net (sans depense) par mois en une année ----------------
db.rendezvous.aggregate([
  {
    $addFields: {
      dateConvertie: {
        $dateFromString: {
          dateString: "$dateheurerendezvous",
          format: "%Y-%m-%d %H:%M:%S"
        }
      }
    }
  },
  {
    $match: {
      $and: [
        { _state: 1},
        { 
          $expr: {
            $eq: [{ $year: '$dateConvertie' },  2024]
          }
        }
      ]
    }
  },
  {
    $lookup: {
      from: "service",
      localField: "idservice",
      foreignField: "_id",
      as: "service"
    }
  },
  {
    $unwind: "$service"
  },
  {
    $project: {
      month: { $month: "$dateConvertie" },
      prix: { $toInt: "$service.prix" },
      poucentageCommission: { $ifNull: [{ $toDouble :"$service.commission"}, 0] },
      commission: {
        $multiply: [
          { $toInt: "$service.prix" },
          { $divide: [
              { $ifNull: [{ $toDouble :"$service.commission"}, 0] }, 
              100
            ]
          }
        ]
      }
    }
  },
  {
    $project: {
      month: 1,
      totalPrice: { $subtract: ["$prix", "$commission"] }
    }
  },
  {
      $group: {
        _id: "$month",
        total: { $sum: "$totalPrice" }
      }
  }
])

